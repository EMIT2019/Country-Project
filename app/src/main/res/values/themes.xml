        <item name="colorPrimary">@color/simple_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/gray</item>
        <item name="colorOnPrimaryContainer">@color/pale_blue</item>
        <item name="colorOnPrimarySurface">@color/purple</item>
        <item name="colorOnSurface">@color/light_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
